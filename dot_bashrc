# .bashrc

# Source global definitions
if [ -f /etc/bashrc ]; then
    . /etc/bashrc
fi

# Environment Variables
if [ -f ~/.bashenv ]; then
    . ~/.bashenv
fi

# Aliases
if [ -f ~/.bashenv ]; then
    . ~/.bash_aliases
fi


# User specific aliases and functions
if [ -d ~/.bashrc.d ]; then
    for rc in ~/.bashrc.d/*; do
        if [ -f "$rc" ]; then
            . "$rc"
        fi
    done
fi
unset rc

# .bashenv

# User specific environment
if ! [[ "$PATH" =~ "$HOME/.local/bin:" ]]; then
    PATH="$HOME/.local/bin:$PATH"
fi

if ! [[ "$PATH" =~ "$HOME/bin:" ]]; then
    PATH=":$HOME/bin:$PATH"
fi

if ! [[ "$PATH" =~ "$HOME/.cargo/bin:" ]]; then
    PATH="$HOME/.cargo/bin:$PATH"
fi

export PATH

export QT_QPA_PLATFORMTHEME=kde
